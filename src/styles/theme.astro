<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap');

    .font-medieval {
        font-family: 'MedievalSharp', cursive;
    }

    /* Base text styling */
    .prose {
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
    }

    /* Make headings use medieval font */
    .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
        font-family: 'MedievalSharp', cursive;
    }

    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }

    /* Minecraft color overrides with darker, more readable colors */
    .text-dark-blue { color: #1a2638; }
    .text-dark-green { color: #1f3a27; }
    .text-dark-aqua { color: #264850; }
    .text-dark-red { color: #5c2e0e; }
    .text-dark-purple { color: #2d1537; }
    .text-gold { color: #704e06; }
    .text-gray { color: #4a443f; }
    .text-dark-gray { color: #2e2d2c; }
    .text-blue { color: #1f2c3d; }
    .text-green { color: #2c4c2d; }
    .text-aqua { color: #37575d; }
    .text-red { color: #63321b; }
    .text-light-purple { color: #422050; }
    .text-yellow { color: #705206; }

    /* Animation for collapsible sections */
    details[open] summary ~ * {
        animation: sweep .3s ease-in-out;
    }

    @keyframes sweep {
        0%    {opacity: 0; transform: translateY(-10px)}
        100%  {opacity: 1; transform: translateY(0)}
    }

    /* Origins Pages Background Styling */
    .bg-noise {
        position: relative;
        background-color: #f5f1e6;
        isolation: isolate;
        border: 2px solid rgba(120, 53, 15, 0.9);
        box-shadow:
                inset 0 0 15px rgba(120, 53, 15, 0.1),
                0 0 20px rgba(0, 0, 0, 0.1);
    }

    .bg-noise::before {
        content: '';
        position: absolute;
        inset: 0;
        background-image: url('https://background-tiles.com/overview/white/textures/large/5026.png');
        background-repeat: repeat;
        background-size: 300px 300px;
        mix-blend-mode: luminosity;
        opacity: 0.6;
        z-index: -2;
    }

    .bg-noise::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(165deg,
        rgba(194, 65, 12, 0.02) 0%,
        rgba(180, 83, 9, 0.04) 35%,
        rgba(146, 64, 14, 0.07) 100%
        );
        pointer-events: none;
        z-index: -1;
    }

    /* Enhanced shadows for details blocks */
    .race-card {
        filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.05));
    }

    .subrace-card {
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.03));
    }

    /* Optional: Add subtle animation to shadows on hover */
    .race-card:hover {
        filter: drop-shadow(0 6px 8px rgba(0, 0, 0, 0.08));
        transition: filter 0.2s ease-in-out;
    }

    /* Other Gameplay Pages */
    .bg-modern {
        position: relative;
        background-color: #1c1917;  /* stone-900 */
        isolation: isolate;
        border: 2px solid rgba(168, 162, 158, 0.1);  /* stone-400 with low opacity */
        box-shadow:
                inset 0 0 25px rgba(168, 162, 158, 0.05),
                0 0 20px rgba(0, 0, 0, 0.2);
    }

    .bg-modern::before {
        content: '';
        position: absolute;
        inset: 0;
        background-image: url('https://background-tiles.com/overview/white/textures/large/5026.png');
        background-repeat: repeat;
        background-size: 300px 300px;
        mix-blend-mode: soft-light;
        opacity: 0.1;
        z-index: -2;
    }

    .bg-modern::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(165deg,
        rgba(168, 162, 158, 0.02) 0%,
        rgba(168, 162, 158, 0.04) 35%,
        rgba(168, 162, 158, 0.07) 100%
        );
        pointer-events: none;
        z-index: -1;
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
    }

    /* Image rendering for pixel art */
    .image-pixelated {
        image-rendering: pixelated;
        image-rendering: -moz-crisp-edges;
        image-rendering: crisp-edges;
    }
</style>