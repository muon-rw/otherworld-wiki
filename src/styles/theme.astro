<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap');

    .font-medieval {
        font-family: 'MedievalSharp', cursive;
    }

    /* Base text styling */
    .prose {
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
    }

    /* Make headings use medieval font */
    .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
        font-family: 'MedievalSharp', cursive;
    }

    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }

    /* Minecraft color overrides with darker, more readable colors */
    .text-dark-blue { color: #1a2638; }
    .text-dark-green { color: #1f3a27; }
    .text-dark-aqua { color: #264850; }
    .text-dark-red { color: #5c2e0e; }
    .text-dark-purple { color: #2d1537; }
    .text-gold { color: #704e06; }
    .text-gray { color: #4a443f; }
    .text-dark-gray { color: #2e2d2c; }
    .text-blue { color: #1f2c3d; }
    .text-green { color: #2c4c2d; }
    .text-aqua { color: #37575d; }
    .text-red { color: #63321b; }
    .text-light-purple { color: #422050; }
    .text-yellow { color: #705206; }

    /* Animation for collapsible sections */
    details[open] summary ~ * {
        animation: sweep .3s ease-in-out;
    }

    @keyframes sweep {
        0%    {opacity: 0; transform: translateY(-10px)}
        100%  {opacity: 1; transform: translateY(0)}
    }

    /* Background styling */
    .bg-noise {
        background-color: #f5f1e6;
        background-image:
                linear-gradient(165deg,
                rgba(194, 65, 12, 0.02) 0%,
                rgba(180, 83, 9, 0.04) 35%,
                rgba(146, 64, 14, 0.07) 100%
                ),
                url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3CfeComponentTransfer%3E%3CfeFuncA type='linear' slope='0.015'/%3E%3C/feComponentTransfer%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' fill='%23e3bc91'/%3E%3C/svg%3E");
        background-repeat: repeat, repeat;
        background-size: 100% 100%, 200px 200px;
        background-attachment: fixed, scroll;
    }

    /* Image rendering for pixel art */
    .image-pixelated {
        image-rendering: pixelated;
        image-rendering: -moz-crisp-edges;
        image-rendering: crisp-edges;
    }
</style>