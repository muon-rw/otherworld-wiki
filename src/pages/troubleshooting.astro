---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Troubleshooting">
    <main class="container mx-auto px-4 py-8 min-h-screen bg-noise">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold mb-8 text-amber-900 text-center font-medieval drop-shadow-sm">
                Troubleshooting
            </h1>

            <div class="prose prose-amber mx-auto">
                <div class="p-6 bg-gradient-to-r from-amber-50 to-amber-100
                           border border-amber-200 rounded-lg shadow-md">
                    <p class="text-amber-900">
                        This page is under construction. Troubleshooting guides coming soon!
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>
