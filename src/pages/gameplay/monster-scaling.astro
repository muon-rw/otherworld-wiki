---
import Layout from '../../layouts/Layout.astro';
import FooterArrowNav from '../../components/FooterArrowNav.astro';
---

<Layout title="Otherworld - Monster Leveling">
    <main class="container mx-auto px-4 py-8 min-h-screen bg-modern">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold mb-8 text-purple-400 text-center">
                Monster Leveling
            </h1>

            <div class="p-6 bg-purple-900/20 border border-purple-500/10 rounded-lg mb-8">
                <p class="text-purple-100/80">
                    Coming soon!
                </p>
            </div>
        </div>
        <FooterArrowNav />
    </main>
</Layout>