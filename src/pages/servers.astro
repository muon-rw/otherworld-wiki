---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import otherworldBanner from '../assets/otherworld.png';
import FooterArrowNav from '../components/FooterArrowNav.astro';
import mediaDungeon from '../assets/backgrounds/media_dungeon.jpg';
---

<Layout title="Server Owners">
    <main class="min-h-screen bg-stone-900 relative">
        <!-- Background Image Layer - scrolls with content -->
        <div class="absolute top-0 left-0 right-0 h-[90vh] pointer-events-none z-0"
             style={`background-image: url(${mediaDungeon.src}); background-size: cover; background-position: center; background-repeat: no-repeat;`}>
            <!-- Subtle overlay to fade the image -->
            <div class="absolute inset-0 bg-stone-900/10"></div>
            <!-- Gradient overlays for top and bottom fade -->
            <div class="absolute inset-0 bg-gradient-to-b from-stone-900 via-transparent to-stone-900"></div>
        </div>
        
        <!-- Content Layer -->
        <div class="relative z-10">
            <!-- Logo and Title Container -->
            <div class="w-full max-w-7xl mx-auto px-4 pt-16 text-center">
                <div class="w-full max-w-[30vw] md:max-w-[33%] mx-auto mb-8 group relative z-0">
                    <div class="transform transition-all duration-300
                                group-hover:scale-[1.02] group-hover:drop-shadow-[0_10px_10px_rgba(0,0,0,0.3)]">
                        <Image
                                src={otherworldBanner}
                                alt="Otherworld"
                                class="w-full h-auto"
                        />
                    </div>
                </div>

                <h1 class="text-4xl font-bold mb-8 text-purple-400">
                    Server Guides
                </h1>
            </div>
            
            <div class="container mx-auto px-4 pb-8">
                <div class="max-w-4xl mx-auto space-y-12">
                {/* Installation Section */}
                <section id="installation">
                    <h2 class="text-3xl font-bold mb-8 text-purple-400 border-b border-purple-900/50 pb-4">
                        Installation
                    </h2>
                    <div class="bg-purple-900/20 rounded-lg p-6 border border-purple-500/10">
                        <p class="text-purple-100/80">
                            This section is under construction. Server installation guide coming soon!
                        </p>
                    </div>
                </section>

                {/* Listing your Server Section */}
                <section id="listing-your-server">
                    <h2 class="text-3xl font-bold mb-8 text-purple-400 border-b border-purple-900/50 pb-4">
                        Listing your Server
                    </h2>
                    <div class="bg-purple-900/20 rounded-lg p-6 border border-purple-500/10">
                        <p class="text-purple-100/80">
                            This section is under construction. Information about listing your server coming soon!
                        </p>
                    </div>
                </section>

                {/* Server Recommendations Section */}
                <section id="server-recommendations">
                    <h2 class="text-3xl font-bold mb-8 text-purple-400 border-b border-purple-900/50 pb-4">
                        Server Recommendations
                    </h2>
                    <div class="bg-purple-900/20 rounded-lg p-6 border border-purple-500/10">
                        <p class="text-purple-100/80">
                            This section is under construction. Server recommendations coming soon!
                        </p>
                    </div>
                </section>

                {/* Looking for a Host Section */}
                <section id="looking-for-a-host">
                    <h2 class="text-3xl font-bold mb-8 text-purple-400 border-b border-purple-900/50 pb-4">
                        Looking for a Host?
                    </h2>
                    <div class="bg-purple-900/20 rounded-lg p-6 border border-purple-500/10">
                        <p class="text-purple-100/80">
                            This section is under construction. Hosting recommendations coming soon!
                        </p>
                    </div>
                </section>
                </div>
            </div>
        
        <FooterArrowNav />
    </main>
</Layout>
