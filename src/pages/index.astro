---
import Layout from '../layouts/Layout.astro';
import {Image} from 'astro:assets';
import otherworldBanner from '../assets/otherworld.png';
import homeBackground from '../assets/backgrounds/home.png';
import tavernBackground from '../assets/backgrounds/media_tavern.jpg';
---

<Layout title="Otherworld - Wiki">
    <main class="min-h-screen bg-stone-900">
        <!-- Top Hero Section with Background Image -->
        <section class="relative w-full min-h-[60vh] flex flex-col items-center justify-center overflow-hidden"
                 style={`background-image: url(${homeBackground.src}); background-size: cover; background-position: center; background-repeat: no-repeat;`}>
            <!-- Gradient overlays for top and bottom fade -->
            <div class="absolute inset-0 bg-gradient-to-b from-stone-900 via-transparent to-stone-900 pointer-events-none"></div>
            
            <!-- Content Container -->
            <div class="relative z-10 w-full max-w-7xl mx-auto px-4 py-16 text-center">
                <div class="w-full max-w-[90vw] md:max-w-7xl mx-auto pt-2 group relative z-0 mb-8">
                    <div class="transform transition-all duration-300
                                group-hover:scale-[1.02] group-hover:drop-shadow-[0_10px_10px_rgba(0,0,0,0.3)]">
                        <Image
                                src={otherworldBanner}
                                alt="Otherworld"
                                class="w-full h-auto"
                        />
                    </div>
                </div>

                <div class="max-w-4xl mx-auto flex flex-col items-center gap-6">
                    <a href="/setup" 
                       class="px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5">
                        Install
                    </a>
                    <a href="#overview" 
                       class="text-stone-300 text-lg font-medium transition-all duration-200 hover:text-purple-300"
                       style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.5), 0 0 20px rgba(168, 85, 247, 0.3);">
                        Read More
                    </a>
                    <a href="#overview" 
                       class="animate-bounce cursor-pointer group">
                        <svg class="w-8 h-8 text-stone-300 group-hover:text-purple-400 transition-colors" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    </a>
                </div>
            </div>
        </section>

        <div id="overview" class="relative container mx-auto px-4 mb-16 scroll-mt-20">
            <!-- Background Image Layer - positioned below Overview header border -->
            <div class="absolute h-[80vh] pointer-events-none z-0 w-screen overflow-hidden"
                 style={`left: 50%; margin-left: -50vw; top: calc(1.875rem + 1rem + 1px + 6px);`}>
                <!-- Sharp top edge (extends 3px up, stops 1px before container edge) -->
                <div class="absolute left-0 right-0 z-10"
                     style={`top: -3px; height: 2px; background-image: url(${tavernBackground.src}); background-size: cover; background-position: center; background-repeat: no-repeat;`}></div>
                <!-- Blurred main image (offset slightly to avoid edge blur) -->
                <div class="absolute top-[-3px] left-0 right-0 bottom-0"
                     style={`background-image: url(${tavernBackground.src}); background-size: cover; background-position: center; background-repeat: no-repeat; filter: blur(6px);`}></div>
                <!-- Gradient overlays: 60% at top, 30% at center, 100% at bottom -->
                <div class="absolute inset-0 z-20" style="background: linear-gradient(to bottom, rgba(28, 25, 23, 0.6) 0%, rgba(28, 25, 23, 0.3) 50%, rgba(28, 25, 23, 1) 100%);"></div>
            </div>
            
            <!-- Content Layer -->
            <div class="relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold mb-8 text-purple-400 border-b border-purple-900/50 pb-4">
                    Overview
                </h2>
                
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-purple-300">
                        What is Otherworld?
                    </h3>
                    
                    <div class="bg-stone-900/80 backdrop-blur-sm rounded-lg p-6 border border-stone-700/50">
                        <div class="space-y-4 text-stone-300 text-lg leading-relaxed">
                            <p>
                                Otherworld is a Fantasy RPG modpack inspired by the hit tabletop game Dungeons and Dragons. It tells a story of magic and calamity set within the world of Minecraft, through an adventure packed campaign with immersive lore.
                            </p>
                            <p>
                                Players will build their character with their own unique backstory, and strengthen and develop their capabilities through progressive RPG gameplay.
                            </p>
                        </div>
                    </div>

                    <div class="pt-8">
                        <h3 class="text-2xl font-bold text-purple-300 mb-4">
                            Gameplay:
                        </h3>
                        <div class="bg-stone-900/80 backdrop-blur-sm rounded-lg p-6 border border-stone-700/50">
                            <div class="space-y-4 text-stone-300 text-lg leading-relaxed">
                                <p>
                                    Inside, you'll uncover secrets hidden within a magical realm where a great calamity once occurred, and along the way will need to defeat many powerful enemies, some familiar and some new.
                                </p>
                                <p>
                                    Otherworld is a cultivation of what we believe to the best of the Minecraft modding community, tied together in a unique way. Hundreds of mods are blended together seamlessly using custom patches and content available nowhere else, to form one immersive RPG experience!
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="pt-8">
                        <p class="text-stone-300 text-lg mb-4">
                            Still Curious?
                        </p>
                        <a href="https://www.curseforge.com/minecraft/modpacks/otherworld-dnd" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5">
                            Read More
                        </a>
                        <a href="/setup"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5">
                            Install
                        </a>
                        <a href="/media"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5">
                            Screenshots
                        </a>
                        <a href="https://lunapixel.studio/discord"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-block px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5">
                            Discord
                        </a>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </main>
</Layout>