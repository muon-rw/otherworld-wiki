---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import otherworldBanner from '../../assets/otherworld.png';
import FooterArrowNav from '../../components/FooterArrowNav.astro';
import RacesContent from '../../components/otherworld-origins/RacesContent.astro';
import ClassesContent from '../../components/otherworld-origins/ClassesContent.astro';
import CantripsAndFeatsContent from '../../components/otherworld-origins/CantripsAndFeatsContent.astro';
---

<Layout title="Modpack Content">
    <main class="container mx-auto px-4 py-8 min-h-screen bg-noise">
        <div class="max-w-4xl mx-auto">
            {/* Banner Image */}
            <div class="w-full max-w-[90vw] md:max-w-7xl mx-auto mb-8 group relative z-0">
                <div class="transform transition-all duration-300
                            group-hover:scale-[1.02] group-hover:drop-shadow-[0_10px_10px_rgba(0,0,0,0.3)]">
                    <Image
                            src={otherworldBanner}
                            alt="Otherworld"
                            class="w-full h-auto rounded-lg"
                    />
                </div>
            </div>

            <h1 class="text-6xl font-bold mb-8 text-amber-900 text-center font-medieval drop-shadow-sm">
                Modpack Content
            </h1>

            {/* Origins Section */}
            <section id="origins" class="scroll-mt-20">
                <div class="mb-12">
                    <div class="flex items-center justify-center gap-4 mb-6">
                        <h2 class="text-5xl font-bold text-amber-900 text-center font-medieval drop-shadow-sm">
                            Otherworld Origins
                        </h2>
                        <a href="https://www.curseforge.com/minecraft/mc-mods/otherworld-origins" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-amber-700 hover:text-amber-900 transition-colors"
                           title="View on CurseForge">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" role="img" xmlns="http://www.w3.org/2000/svg">
