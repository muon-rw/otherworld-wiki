---
import { Image } from 'astro:assets';
import lunaPixelLogo from '../assets/lunapixel_text.webp';
import lunaPixelBg from '../assets/lunapixel_bg.jpg';
---

<footer class="relative border-t border-amber-900/50 py-8 mt-16 overflow-hidden">
    <!-- Background Image Layer -->
    <div class="absolute inset-0 pointer-events-none z-0">
        <!-- Blurred main image -->
        <div class="absolute inset-0"
             style={`background-image: url(${lunaPixelBg.src}); background-size: cover; background-position: center; background-repeat: no-repeat; filter: blur(10px);`}></div>
        <!-- Gradient overlays: 50% to 80% black gradient -->
        <div class="absolute inset-0 z-20" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.8) 100%);"></div>
    </div>
    
    <!-- Content Layer -->
    <div class="relative z-30">
        <div class="container mx-auto px-4">
            <div class="flex flex-col items-center justify-center space-y-4">
            <a href="https://lunapixel.studio" target="_blank" rel="noopener noreferrer"
               class="group transition-transform hover:scale-105">
                <Image
                        src={lunaPixelLogo}
                        alt="Luna Pixel Studios"
                        class="h-12 w-auto opacity-75 group-hover:opacity-100 transition-opacity"
                        width={300}
                        height={60}
                />
            </a>
            <div class="text-stone-300 text-sm text-center">
                <p class="mt-1">Otherworld is a modpack by Luna Pixel Studios</p>
                <p>Not an official Minecraft product. Not approved by or associated with Mojang or Microsoft.</p>
                <p>Â© 2026 Luna Pixel Studios. All rights reserved.</p>
            </div>
            </div>
        </div>
    </div>
</footer>