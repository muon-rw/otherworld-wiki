---
import {Image} from 'astro:assets';
import otherworldLogo from '../assets/otherworld.png';
import moonLogo from '../assets/moon_translucent.webp';
const currentPath = Astro.url.pathname;


const gameplayContent = [
    {
        title: 'Otherworld Origins',
        path: '/mods/otherworld-origins',
        items: [
            {title: 'Races and Subraces', path: '/mods/otherworld-origins/races'},
            {title: 'Classes and Subclasses', path: '/mods/otherworld-origins/classes'},
            {title: 'Cantrips and Feats', path: '/mods/otherworld-origins/cantrips-and-feats'}
        ]
    },
    {
        title: 'Otherworld Apotheosis',
        path: '/mods/otherworld-apotheosis'
    },
    {
        title: 'Core Systems',
        items: [
            {title: 'Player Leveling', path: '/gameplay/player-leveling'},
            {title: 'Monster Scaling', path: '/gameplay/monster-scaling'}
        ]
    }
];
---
<nav class="bg-stone-900/95 border-b border-amber-900/50 relative z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Main container with centered content */}
        <div class="h-16 flex justify-center">

            {/* Center container for all elements */}
            <div class="hidden sm:flex items-center space-x-8">

                {/* Logo */}
                <div class="flex-shrink-0 flex items-center group space-x-2">
                    <Image
                            src={moonLogo}
                            alt="Moon Logo"
                            class="h-8 w-auto opacity-90"
                            width={32}
                            height={32}
                    />
                    <a href="/" class="relative">
                        <Image
                                src={otherworldLogo}
                                alt="Otherworld Logo"
                                class="h-8 w-auto opacity-90 hover:opacity-100 transition-opacity"
                                width={128}
                                height={128}
                        />
                        <div class="absolute -bottom-2 left-0 right-0 text-center">
                            <span class="text-[0.6rem] font-bold tracking-widest text-amber-400
                                drop-shadow-[0_1px_1px_rgba(0,0,0,0.8)]">
                                    WIKI
                            </span>
                        </div>
                    </a>
                </div>

                {/* Navigation Items */}
                <a href="/"
                   class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium
                    ${currentPath === '/'
                       ? 'text-amber-400 border-amber-400'
                       : 'text-stone-300 border-transparent hover:text-amber-200'
                   }`}>
                    Home
                </a>

                {/* Gameplay Dropdown */}
                <div class="relative group">
                    <button class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-stone-300 group-hover:text-amber-200 h-full">
                        Gameplay
                        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    </button>
                    <div class="absolute w-full h-2 bottom-0 translate-y-full"></div>
                    <div class="absolute hidden group-hover:block w-64 left-0 top-full pt-2">
                        <div class="bg-stone-800 rounded-md shadow-xl border border-amber-900/50 py-2">
                            {gameplayContent.map(section => (
                                    <div class="py-2">
                                        {section.path ? (
                                                <a href={section.path}
                                                   class="block px-4 py-1 text-sm font-semibold text-amber-400 hover:bg-stone-700">
                                                    {section.title}
                                                </a>
                                        ) : (
                                                <div class="px-4 py-1 text-sm font-semibold text-amber-400">
                                                    {section.title}
                                                </div>
                                        )}
                                        {section.items?.map(item => (
                                                <a href={item.path}
                                                   class="block px-6 py-1 text-sm text-stone-300 hover:bg-stone-700 hover:text-amber-200">
                                                    {item.title}
                                                </a>
                                        ))}
                                    </div>
                            ))}
                        </div>
                    </div>
                </div>

                <a href="/install"
                   class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium
                    ${currentPath === '/install'
                       ? 'text-amber-400 border-amber-400'
                       : 'text-stone-300 border-transparent hover:text-amber-200'
                   }`}>
                    Install
                </a>

                <a href="/performance"
                   class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium
                    ${currentPath === '/performance'
                       ? 'text-amber-400 border-amber-400'
                       : 'text-stone-300 border-transparent hover:text-amber-200'
                   }`}>
                    Performance
                </a>

                {/* External Links */}
                <a href="https://github.com/LunaPixelStudios/Otherworld/issues"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-1 pt-1 text-sm font-medium text-stone-300 hover:text-amber-200 transition-colors">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    Issues
                </a>

                {/* Discord Link */}
                <a href="https://lunapixel.studio/discord"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-1 pt-1 text-sm font-medium text-stone-300 hover:text-amber-200 transition-colors">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                    </svg>
                    Discord
                </a>
            </div>

            {/* Mobile menu button - keep at the right edge */}
            <div class="sm:hidden absolute right-4">
                <button type="button"
                        class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-stone-400 hover:text-amber-200">
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>


    <!-- Mobile menu -->
    <div class="sm:hidden hidden" id="mobile-menu">
        <div class="pt-2 pb-3 space-y-1">
            <a href="/" class="block pl-3 pr-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200">
                Home
            </a>

            <!-- Mobile Gameplay Dropdown -->
            <div class="mobile-dropdown">
                <button class="w-full text-left pl-3 pr-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200 flex justify-between items-center">
                    Gameplay
                    <svg class="h-4 w-4 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                <div class="hidden bg-stone-900">
                    {gameplayContent.map(section => (
                            <>
                                {section.path ? (
                                        <a href={section.path}
                                           class="block pl-6 pr-4 py-2 text-sm font-semibold text-amber-400 hover:bg-stone-800">
                                            {section.title}
                                        </a>
                                ) : (
                                        <div class="pl-6 pr-4 py-2 text-sm font-semibold text-amber-400">
                                            {section.title}
                                        </div>
                                )}
                                {section.items?.map(item => (
                                        <a href={item.path}
                                           class="block pl-9 pr-4 py-1 text-sm text-stone-400 hover:bg-stone-800 hover:text-amber-200">
                                            {item.title}
                                        </a>
                                ))}
                            </>
                    ))}
                </div>
            </div>

            <a href="/install"
               class="block pl-3 pr-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200">
                Install
            </a>

            <a href="/performance"
               class="block pl-3 pr-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200">
                Performance
            </a>

            {/* External Links Section */}
            <div class="pt-4 pb-3 border-t border-stone-700">
                <a href="https://github.com/LunaPixelStudios/Otherworld/issues"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center px-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    Issues
                </a>

                <a href="https://lunapixel.studio/discord"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center px-4 py-2 text-base font-medium text-stone-300 hover:bg-stone-800 hover:text-amber-200">
                    <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                    </svg>
                    Discord
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    const button = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('#mobile-menu');

    button?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });

    // Mobile dropdowns
    const mobileDropdowns = document.querySelectorAll('.mobile-dropdown');
    mobileDropdowns.forEach(dropdown => {
        const btn = dropdown.querySelector('button');
        const content = dropdown.querySelector('div');
        const arrow = dropdown.querySelector('svg');

        btn?.addEventListener('click', () => {
            content?.classList.toggle('hidden');
            arrow?.classList.toggle('rotate-180');
        });
    });
</script>